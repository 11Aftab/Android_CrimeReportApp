<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/baner"
    tools:context="come.crimeReport.AdminHome">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginLeft="15dp"
            android:text="USER DETAILS"
            android:padding="5dp"
            android:textColor="#fff"
            android:background="@drawable/circlebtton"
            android:id="@+id/bt_userdet"/>
        <Button
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:layout_marginRight="15dp"
            android:text="MISSING DETAILS"
            android:padding="5dp"
            android:textColor="#fff"
            android:background="@drawable/circlebtton"
            android:id="@+id/bt_missing"/>
        </RelativeLayout>


        <RelativeLayout
            android:gravity="bottom"
            android:layout_gravity="bottom|end"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginTop="10dp"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:text="CRIME DETAILS"
                android:padding="5dp"
                android:textColor="#fff"
                android:background="@drawable/circlebtton"
                android:id="@+id/bt_crimeDetails"/>
            <Button
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:layout_marginRight="15dp"
                android:text="Home"
                android:textColor="#fff"
                android:background="@drawable/circlebtton"
                android:id="@+id/bt_home"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
